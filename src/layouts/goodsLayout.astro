<html class="goods">
    <main>
        <div class="flex">
            <div class="img-switcher">
                <img
                    id="mainImg"
                    class="goods_thumbnail main-img"
                    src=`/19_ecsite/images/${frontmatter.thumbnail}`
                />
                <div class="thumbnails">
                    <button class="thumb-btn active"
                        ><img
