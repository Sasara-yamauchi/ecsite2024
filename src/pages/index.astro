---
import Layout from '../layouts/Layout.astro';
import Goodscard from '../components/goodsCard.astro';
import { getCollection } from 'astro:content';
const workPages = await getCollection('goods');
console.log(workPages);
---

<Layout>
<main>
  <div class="flex">
  {workPages.map(productPage => (<Goodscard title={productPage.data.title} href=`/goods/${productPage.slug}` thumbnail={productPage.data.thumbnail} body={productPage.data.description} price={productPage.data.price}/>
))}
</div>
</main>
</Layout>